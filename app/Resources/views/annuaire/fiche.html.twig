        <div class="nav-wrapper">
            <div class="row">
                <div class="col s2">
                    <a id="logo" href="{{ path('accueil') }}" class="valign-wrapper">
                        <img src="{{ asset('logo.png') }}" alt="" class="responsive-img container">
                    </a>
                </div>
                <div class="row">
                    <h5 class="center-align col s8 l8">Bienvenue !</h5>
                    <a href="{{ path('accueil') }}" class="waves-effect waves-light btn light">Déconnexion</a>
